@model IEnumerable<MyPortfolio.Models.Rate>

@{
    ViewData["Title"] = "Index";

}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProjectMade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CommentRate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr> 
            <td>
                @Html.DisplayFor(modelItem => item.ProjectMade.ProjectMadeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CommentRate)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.RateId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.RateId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.RateId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

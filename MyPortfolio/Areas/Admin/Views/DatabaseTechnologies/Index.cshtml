@model IEnumerable<MyPortfolio.Models.DatabaseTechnology>

@{
    ViewData["Title"] = "Index";

}

<br />

<h1>List with Technologis</h1>
<br />
<br />

<div>
  <a asp-action="Create" asp-controller="DatabaseTechnologies" class="btn btn-info form-control text-white">
     Add New Database Technology
  </a>
</div>

<br />


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DatabaseTechnologyName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DatabaseTechnologyName)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-success" asp-route-id="@item.DatabaseTechnologyId">Edit</a> |
                <a asp-action="Details" class="btn btn-info" asp-route-id="@item.DatabaseTechnologyId">Details</a> |
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.DatabaseTechnologyId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

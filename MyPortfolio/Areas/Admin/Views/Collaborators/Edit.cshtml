@model MyPortfolio.Models.Collaborators

@{
    ViewData["Title"] = "Edit";

}

<br />

<h4>Edit Name</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CollaboratorId" />
            <div class="form-group">
                <label asp-for="CollaboratorFullName" class="control-label"></label>
                <input asp-for="CollaboratorFullName" class="form-control" />
                <span asp-validation-for="CollaboratorFullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CollaboratorDescription" class="control-label"></label>
                <textarea asp-for="CollaboratorDescription" class="form-control"></textarea>
                <span asp-validation-for="CollaboratorDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BackEndTechnologyId" class="control-label"></label>
                <select asp-for="BackEndTechnologyId" class="form-control" asp-items="ViewBag.BackEndTechnologyId"></select>
                <span asp-validation-for="BackEndTechnologyId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FrontEndTechnologyId" class="control-label"></label>
                <select asp-for="FrontEndTechnologyId" class="form-control" asp-items="ViewBag.FrontEndTechnologyId"></select>
                <span asp-validation-for="FrontEndTechnologyId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OtherTechnologyId" class="control-label"></label>
                <select asp-for="OtherTechnologyId" class="form-control" asp-items="ViewBag.OtherTechnologyId"></select>
                <span asp-validation-for="OtherTechnologyId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DatabaseTechnologyId" class="control-label"></label>
                <select asp-for="DatabaseTechnologyId" class="form-control" asp-items="ViewBag.DatabaseTechnologyId"></select>
                <span asp-validation-for="DatabaseTechnologyId" class="text-danger"></span>
            </div>
            <div class="col-12 btn-group">
                <div class="col-6 form group text-right p-2">
                    <a asp-action="Index" class="btn btn-secondary">&nbsp;Back&nbsp;</a>
                </div>
                <div class="col-6 form-group text-left p-2">
                    <input type="submit" value="Save" class="btn btn-success" />
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

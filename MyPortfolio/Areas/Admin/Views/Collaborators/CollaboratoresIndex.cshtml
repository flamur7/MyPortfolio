@model IEnumerable<MyPortfolio.Models.Collaborators>

@{
    ViewData["Title"] = "CollaboratoresIndex";
}

<h1>Collaboratores</h1>

<br />
<br />
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-4">
            <div class="card mb-4" style="background: linear-gradient(115deg, #9d44c7 10%, #56d8e4 90%);">
                <div class="card-header">
                    <h4 class="my-0 font-weight-normal">
                        <label style="font-size: 20px;color: white"><b>@item.CollaboratorFullName</b></label>
                    </h4>
                </div>
                <div class="card-header">
                    <h4 class="my-0 font-weight-normal">
                        <label style="font-size: 20px;color: white"><b>@item.CollaboratorDescription</b></label>
                    </h4>
                </div>
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <a asp-action="Details" asp-controller="Collaborators" style="border: 1px solid black" asp-route-id="@item.CollaboratorId" style="text-black;" class="btn btn-light">Check</a>
                    </div>
                </div>
            </div>
        </div>
            
    }
</div>
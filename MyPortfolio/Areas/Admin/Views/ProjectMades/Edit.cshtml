@model MyPortfolio.Models.ProjectMade

@{
    ViewData["Title"] = "Edit";

}


<br />

<h4>Edit Name</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProjectMadeId" />
            <div class="form-group">
                <label asp-for="ProjectMadeName" class="control-label"></label>
                <input asp-for="ProjectMadeName" class="form-control" />
                <span asp-validation-for="ProjectMadeName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProjectMadeDescription" class="control-label"></label>
                <input asp-for="ProjectMadeDescription" class="form-control" />
                <span asp-validation-for="ProjectMadeDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <input asp-for="Image" class="form-control" type="file"/>
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BackEndTechnologyId" class="control-label"></label>
                <select asp-for="BackEndTechnologyId" class="form-control" asp-items="ViewBag.BackEndTechnologyId"></select>
                <span asp-validation-for="BackEndTechnologyId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FrontEndTechnologyId" class="control-label"></label>
                <select asp-for="FrontEndTechnologyId" class="form-control" asp-items="ViewBag.FrontEndTechnologyId"></select>
                <span asp-validation-for="FrontEndTechnologyId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OtherTechnologyId" class="control-label"></label>
                <select asp-for="OtherTechnologyId" class="form-control" asp-items="ViewBag.OtherTechnologyId"></select>
                <span asp-validation-for="OtherTechnologyId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DatabaseTechnologyId" class="control-label"></label>
                <select asp-for="DatabaseTechnologyId" class="form-control" asp-items="ViewBag.DatabaseTechnologyId"></select>
                <span asp-validation-for="DatabaseTechnologyId" class="text-danger"></span>
            </div>
            <hr />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
                <div class="col-4"></div>
            <div class="col-6">
            <img src="~/@Model.Image" width="300px" height="290px" style="border-radius: 5px;border: 1px solid #efefef" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

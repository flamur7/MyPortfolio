@model IEnumerable<MyPortfolio.Models.FrontEndTechnology>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />

<h1>List with Technologis</h1>
<br />
<br />

<div>
  <a asp-action="Create" asp-controller="FrontEndTechnologies" class="btn btn-info form-control text-white">
     Add New FrontEnd-Technology
  </a>
</div>

<br />

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FrontEndName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FrontEndName)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-success" asp-route-id="@item.FrontEndTechnologyId">Edit</a> |
                <a asp-action="Details"  class="btn btn-info" asp-route-id="@item.FrontEndTechnologyId">Details</a> |
                <a asp-action="Delete"  class="btn btn-danger" asp-route-id="@item.FrontEndTechnologyId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

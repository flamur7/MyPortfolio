@model MyPortfolio.Models.Collaborators

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Collaborators</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CollaboratorFullName" class="control-label"></label>
                <input asp-for="CollaboratorFullName" class="form-control" />
                <span asp-validation-for="CollaboratorFullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BackEndTechnologyId" class="control-label"></label>
                <select asp-for="BackEndTechnologyId" class ="form-control" asp-items="ViewBag.BackEndTechnologyId"></select>
            </div>
            <div class="form-group">
                <label asp-for="FrontEndTechnologyId" class="control-label"></label>
                <select asp-for="FrontEndTechnologyId" class ="form-control" asp-items="ViewBag.FrontEndTechnologyId"></select>
            </div>
            <div class="form-group">
                <label asp-for="OtherTechnologyId" class="control-label"></label>
                <select asp-for="OtherTechnologyId" class ="form-control" asp-items="ViewBag.OtherTechnologyId"></select>
            </div>
            <div class="form-group">
                <label asp-for="DatabaseTechnologyId" class="control-label"></label>
                <select asp-for="DatabaseTechnologyId" class ="form-control" asp-items="ViewBag.DatabaseTechnologyId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

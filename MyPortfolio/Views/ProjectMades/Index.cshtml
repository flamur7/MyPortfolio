@model IEnumerable<MyPortfolio.Models.ProjectMade>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />

<h1>List with Projects</h1>
<br />
<br />

<div>
  <a asp-action="Create" asp-controller="ProjectMades" class="btn btn-info form-control text-white">
     Add New Project
  </a>
</div>

<br />

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProjectMadeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProjectMadeDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BackEndTechnology)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FrontEndTechnology)
            </th>
           @* <th>
                @Html.DisplayNameFor(model => model.OtherTechnology)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DatabaseTechnology)
            </th>*@
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProjectMadeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProjectMadeDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BackEndTechnology.BackEndTechnologyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FrontEndTechnology.FrontEndName)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.OtherTechnology.OtherTechnologyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DatabaseTechnology.DatabaseTechnologyName)
            </td>*@
            <td>
                <a asp-action="Edit" class="btn btn-success" asp-route-id="@item.ProjectMadeId">Edit</a> |
                <a asp-action="Details" class="btn btn-info" asp-route-id="@item.ProjectMadeId">Details</a> |
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.ProjectMadeId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
